<?xml version="1.0"?>

<!-- Production Project -->
<!DOCTYPE project [
<!ENTITY user "sporzio">
<!ENTITY app_dir "/uboone/app/users/&user;">
<!ENTITY pnfs_dir "/pnfs/uboone/scratch/users/&user;">

<!ENTITY category "HeavySterileNeutrinos">
<!ENTITY name "prod_bnbunbiased_swizzle_open_inclusive_v4">
<!ENTITY job_n "500">
<!ENTITY event_n "10000">

<!ENTITY grid_dir "&app_dir;/GridJob">
<!ENTITY fcl_dir "&app_dir;/GridJob/&category;/Fcl">
<!ENTITY data_dir "&pnfs_dir;/&category;/&name;">
<!ENTITY work_dir "&grid_dir;/Work/&category;/&name;">
<!ENTITY log_dir "&data_dir;/Log">
]>

<job>
  <project name="&name;">
    <group>uboone</group>
    <numevents>&event_n;</numevents>

    <!-- Operating System -->
    <os>SL5,SL6</os>

    <!-- Batch resources -->
    <resource>DEDICATED,OPPORTUNISTIC</resource>

    <!-- Larsoft information -->
    <larsoft>
      <tag>development</tag>
      <local>&grid_dir;/&category;/larsoft_v06_26_01.tar</local>
    </larsoft>

    <!-- Project stages -->
    <stage name="trigger">
      <fcldir>&fcl_dir;</fcldir>
      <inputdef>prod_notpc_swizzle_open_inclusive_v4</inputdef>
      <fcl>swtrigger_HSnu_Data.fcl</fcl>
      <numjobs>&job_n;</numjobs>
      <outdir>&data_dir;/4_trigger</outdir>
      <workdir>&work_dir;/4_trigger</workdir>
      <logdir>&log_dir;/4_trigger</logdir>
    </stage>

    <ubfcl>devel</ubfcl>
  </project>
</job>

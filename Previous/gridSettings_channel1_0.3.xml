<?xml version="1.0"?>

<!-- Production Project -->
<!DOCTYPE project [
<!ENTITY user "sporzio">
<!ENTITY app_dir "/uboone/app/users/&user;">
<!ENTITY pnfs_dir "/pnfs/uboone/scratch/users/&user;">

<!ENTITY category "HeavySterileNeutrinos">
<!ENTITY name "sterileEvents_mass0.3_channel1_n20000_nf500_ef20">
<!ENTITY job_n "500">
<!ENTITY event_n "10000">

<!ENTITY grid_dir "&app_dir;/GridJob">
<!ENTITY fcl_dir "&app_dir;/GridJob/&category;/Fcl">
<!ENTITY data_dir "&pnfs_dir;/&category;/&name;">
<!ENTITY work_dir "&grid_dir;/Work/&category;/&name;">
<!ENTITY log_dir "&data_dir;/Log">
]>

<job>
  <project name="&name;">
    <group>uboone</group>
    <numevents>&event_n;</numevents>

    <!-- Operating System -->
    <os>SL5,SL6</os>

    <!-- Batch resources -->
    <resource>DEDICATED,OPPORTUNISTIC</resource>

    <!-- Larsoft information -->
    <larsoft>
      <tag>development</tag>
      <local>&grid_dir;/&category;/larsoft_v06_26_01.tar</local>
    </larsoft>

    <!-- Project stages -->
    <stage name="gen">
      <fcl>my_textfilegen.fcl</fcl>
      <fcldir>&fcl_dir;</fcldir>
      <numjobs>&job_n;</numjobs>
      <inputlist>&grid_dir;/&category;/sterileEvents_mass0.3_channel1_n20000_nf500_ef20.list</inputlist>
      <inputmode>textfile</inputmode>
      <outdir>&data_dir;/1_gen</outdir>
      <workdir>&work_dir;/1_gen</workdir>
      <logdir>&log_dir;/1_gen</logdir>
    </stage>

    <stage name="sim_trigger">
      <fcl>standard_g4_uboone.fcl</fcl>
      <fcl>standard_detsim_uboone.fcl</fcl>
      <fcl>swtrigger_HSnu_MC.fcl</fcl>
      <numjobs>&job_n;</numjobs>
      <outdir>&data_dir;/sim_trigger</outdir>
      <workdir>&work_dir;/sim_trigger</workdir>
      <logdir>&log_dir;/sim_trigger</logdir>
    </stage>


    <ubfcl>devel</ubfcl>
  </project>
</job>
